.slider
	// outln blue
	backImage(scale)
	background-position -4px 7px
	background-size 99.8%  60px

	padding-top 50px
	position relative
	&__list
		display flex
		justify-content space-between
	&__item
		// outln green
		font-size 13px
		line-height 19px
		cursor pointer
		&:nth-child(1)
			flex-basis 70px
			margin-right 5.6vw
			transform translate(1px, 2px)
		&:nth-child(2)
			flex-basis 150px
			flex-grow 1
			margin-right 2.7vw
		&:nth-child(3)
			flex-grow 1
			flex-basis 130px
			margin-right 6.5vw
		&:last-child
			margin-right 5px
			align-self center
			transform translateY(-3px)
		&:hover
			opacity 0.8
		&:active
			opacity 0.6
	&__cursor
		position absolute
		top 17px
		left 35%
		sprite($slider)
		cursor pointer
		&:hover
			opacity 0.6
		&:active
			opacity 0.8

	&__inner-field
		// outln red
		margin-top -50px
		width 100%
		height 62px

	+below($tablet)

		&__cursor
			&:hover
				opacity 1

	+below($smallMobile)
		display flex
		flex-direction row-reverse
		width 65%
		// transform scaleY(0.8)
		min-height 400px
		margin-top 10px
		padding-top 0
		backImage(scale_rotate)
		background-position 100% 50%
		background-size contain
		&__list
			flex-direction column-reverse
			justify-content space-between
			align-items flex-end
			margin-right 20px
		&__item
			margin-left 10px
			text-align right
			&:nth-child(1)
				flex-basis auto
				margin-right 0
			&:nth-child(2)
				flex-basis auto
				flex-grow 0
				margin-right 0
			&:nth-child(3)
				flex-grow 0
				flex-basis auto
				margin-right 0
				margin-bottom 40px
			&:last-child
				flex-basis auto
				margin-right 0
				margin-bottom 120px
				align-self flex-end

				transform none
		&__cursor
			left 96%
			top 60%
			transform rotate(90deg)
		&__inner-field
			width 100px
			height auto
			margin-top 0
			margin-right -20px