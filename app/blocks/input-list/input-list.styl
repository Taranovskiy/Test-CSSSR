.input-list
	// outln green
	display block
	&__item
		display flex
		margin-bottom 14px
		&_birthyear
			margin-bottom 16px
		&_address
			margin-bottom 18px
		&_skype
			margin-bottom 20px
	&__label
		// outln blue
		padding-top 19px
		margin-right 17px
		font-size 22.4px
		cursor pointer
		&:hover
			opacity 0.6
		&:active
			opacity 0.3
	&__input
		// outln red
		flex-grow 1
		margin-right 6px
		padding-left 11px
		padding-bottom 12px
		border none
		font-family $courier
		font-weight 400
		font-size 30px
		backImage(underline, png, repeat-x)
		background-position 0 -16px
		background-size auto
		background-color transparent
		&_birthyear
			padding-bottom 13px
			background-position 0 -15px
		&_address
			padding-bottom 11px
			background-position 0 -17px
		&_skype
			padding-bottom 10px
			background-position 0 -17px
		&_email
			padding-bottom 7px
			background-position 0 -20px

	&__input
		&_date
			flex-grow 0
			width 206px
			padding-left 10px
			background-position 0 -19px

	+below($tablet)
		&__input
			margin-right 0
			font-size 24px
			background-position 0 -18px
			&_date
				font-size 30px
		&__label
			margin-right 30px
	+below($mobile)
		&__item
			flex-wrap wrap
		&__label
			padding-bottom 30px
			padding-left 0
			&_date
				padding-left 10px
				padding-bottom 0
				margin-bottom 10px
		&__input
			width 100%
			font-size 21px
			padding-left 0
			background-position 0 -29px
			&_date
				font-size 30px
				width 206px
				padding-left 10px
				background-position 0 -16px