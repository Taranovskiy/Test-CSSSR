.certificates
	display flex
	justify-content space-between
	flex-wrap wrap
	width 405px
	font-size 0
	&__image
		width 200px
		height 281px
		border 3px solid white
		display none
	&__item
		position relative
		transition-duration 0.6s
		opacity 0.6
		&::after
			content ''
			position absolute
			display block
			top 10px
			right 10px
			sprite($fullscreen)
			cursor pointer
			opacity 0
			transition-duration 0.6s
		&:hover
			transform scale(1.1) translateX(-10px)
			opacity 1
			filter sepia(0)
			&::after
				opacity 0.4
	@supports (filter sepia(0.9))
		&__item
			filter sepia(0.9)
		&__svg
			display none
		&__image
			display block
	+below($tablet)
		&__item
			opacity 1
			&::after
				opacity 0.4
			&:hover
				transform none
				opacity none
				&::after
					opacity 0.4
	+below($smallMobile)
		flex-direction column
		align-items center